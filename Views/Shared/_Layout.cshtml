<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmiteAPIWebsite</title>
    <link rel="stylesheet" href="~/js/popper.js" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmiteAPIWebsite</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Gods">Gods</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Items">Items</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="jumbotron jumbotron-fluid">
        <div id="background"> </div>
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center">
                <div class="wrap">
                    <div class="search">
                        <form method="post" asp-controller="Home" asp-action="PlayerSummary" class="player-search">
                            <input type="text" class="searchTerm" name="playerToSearch" placeholder="Enter player name or Gamertag">
                            <button type="submit" class="searchButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center console-icons">
        <div class=" col-md-2 d-flex justify-content-center steam-icon"><a href="https://archive.smitegame.com/store/" target="_blank"><i class="fab fa-steam fa-5x"></i></a></div>
        <div class=" col-md-2 d-flex justify-content-center xbox-icon"><a href="https://www.microsoft.com/en-us/p/smite/c2mhs238pdns?rtc=1&activetab=pivot:overviewtab" target="_blank"><i class="fab fa-xbox fa-5x"></i></a></div>
        <div class=" col-md-2 d-flex justify-content-center playstation-icon"><a href="https://store.playstation.com/en-us/product/UP0334-CUSA02328_00-SMITEXXXXXXXXXXX" target="_blank"><i class="fab fa-playstation fa-5x"></i></a></div>
    </div>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <a href="~/js/site.js" id="return-to-top"><i class="fas fa-chevron-circle-up"></i></a>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SmiteAPIWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/06e882e526.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $("[data-toggle='popover'").popover();
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
